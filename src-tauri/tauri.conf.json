{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aether-player",
  "version": "0.1.1",
  "identifier": "dev.vmohammad.aether",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Aether Player",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": false,
        "userAgent": "Aether Player"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPLOCALDATA/covers/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/vMohammad24/aether-player/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYxOUREQTQyNzZFQUVCQ0YKUldUUDYrcDJRdHFkWWY4WFVUN3lwcUZndDJ0WS9JQ3lONHJoQlZmNFJpeTB0V0h1V0p6RUJwTzkK"
    }
  }
}