{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aether-player",
  "version": "0.1.0",
  "identifier": "dev.vmohammad.aether",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Aether Player",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": false,
        "userAgent": "Aether Player"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPLOCALDATA/covers/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}